super + shift + Return
	urxvtcd

super + shift + backslash
	smartspwn.sh

super + n
	kill -44 $(pidof nmtui) & urxvtcd -tn rxvt-unicode -name nmtui -e nmtui

super + w
	$BROWSER

super + shift + w
	weechat
super + e
	thunderbird

super + v
	code

super + f
	spacefm

super + Print
	cd ~/pix/scrot && scrot

super + shift + Print
	cd ~/pix/scrot && scrot -s

XF86AudioRaiseVolume
	pactl set-sink-mute @DEFAULT_SINK@ 0; pactl set-sink-volume @DEFAULT_SINK@ +5% && refreshbar.sh

XF86AudioLowerVolume
	pactl set-sink-mute @DEFAULT_SINK@ 0; pactl set-sink-volume @DEFAULT_SINK@ -5% && refreshbar.sh

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && refreshbar.sh

shift + XF86AudioRaiseVolume
	pactl set-source-mute @DEFAULT_SOURCE@ 0; pactl set-source-volume @DEFAULT_SOURCE@ +5% && refreshbar.sh

shift + XF86AudioLowerVolume
	pactl set-source-mute @DEFAULT_SOURCE@ 0; pactl set-source-volume @DEFAULT_SOURCE@ -5% && refreshbar.sh

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle && refreshbar.sh

XF86Sleep
	lock.sh & systemctl suspend

XF86ScreenSaver
	lock.sh
super + F2
	lock.sh

super + F7
	desktop_mode.sh

super + shift + F7
	autorandr --change

super + s
	tdrop -w 50% -h 55% -x 25% -y 22% urxvt -tn rxvt-unicode -name spterm -title spterm

super + r
	tdrop -w 60% -h 70% -x 20% -y 15% keepassxc 

super + shift + r
	tdrop -w 60% -h 70% -x 20% -y 15% bitwarden

super + m
	tdrop -w 60% -h 60% -x 20% -y 20% --class plexamp flatpak run com.plexamp.Plexamp
