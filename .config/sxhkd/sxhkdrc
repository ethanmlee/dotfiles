super + shift + Return
	urxvtcd

super + shift + backslash
	smartspwn.sh

super + n
	kill -44 $(pidof nmtui) & urxvtcd -tn rxvt-unicode -name nmtui -e nmtui

super + w
	$BROWSER

super + shift + w
	weechat
super + e
	thunderbird

super + v
	code

super + f
	spacefm

super + Print
	cd ~/pix/scrot && scrot

super + shift + Print
	cd ~/pix/scrot && scrot -s

XF86AudioRaiseVolume
	pamixer -u; pamixer --allow-boost -i 5 && refreshbar.sh

XF86AudioLowerVolume
	pamixer -u; pamixer --allow-boost -d 5 && refreshbar.sh

XF86AudioMute
	pamixer -t && refreshbar.sh

XF86Sleep
	lock.sh

XF86ScreenSaver
	lock.sh
super + F2
	lock.sh

super + F7
	desktop_mode.sh

super + shift + F7
	autorandr --change

super + s
	tdrop -w 50% -h 55% -x 25% -y 22% urxvt -tn rxvt-unicode -name spterm -title spterm

super + r
	tdrop -w 60% -h 70% -x 20% -y 15% keepassxc 

super + shift + r
	tdrop -w 60% -h 70% -x 20% -y 15% bitwarden

super + m
	env HOME=/home/ethan/.config tdrop -w 40% -h 40% -x 30% -y 30% plexamp
