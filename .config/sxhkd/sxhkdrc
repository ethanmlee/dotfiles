super + n
	kill -44 $(pidof nmtui) & urxvt -tn rxvt-unicode -name nmtui -e nmtui

super + shift + n
	arandr

super + w
	$BROWSER

super + shift + w
	$PWBROWSER

super + e
	thunderbird

super + v
	vscode

super + f
	spacefm

super + Print
	cd ~/pix/scrot && scrot

super + shift + Print
	cd ~/pix/scrot && scrot -s

XF86AudioRaiseVolume
	pamixer -u; pamixer --allow-boost -i 5 && refreshbar.sh

XF86AudioLowerVolume
	pamixer -u; pamixer --allow-boost -d 5 && refreshbar.sh

XF86AudioMute
	pamixer -t && refreshbar.sh

XF86Sleep
	lock.sh

XF86ScreenSaver
	lock.sh
super + F2
	lock.sh

super + F7
	desktop_mode.sh

super + s
	tdrop -w "" -h "" -x "" -y "" urxvt -tn rxvt-unicode -name spterm

super + r
	tdrop -w "1900" -h "1400" -x "" -y "" keepassxc 

super + shift + r
	tdrop -w "1900" -h "1400" -x "" -y "" bitwarden

super + m
	env HOME=/home/ethan/.config tdrop -w "1600" -h "1100" -x "" -y "" plexamp
